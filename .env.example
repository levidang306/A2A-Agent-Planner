# A2A Task Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================
# Application Settings
# ====================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ====================
# Agent Configuration
# ====================
SUPERVISOR_PORT=9001
MILESTONE_PORT=9002
TASK_PORT=9003
RESOURCE_PORT=9004

# ====================
# AI Service Configuration
# ====================
AI_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
AI_MODEL=gemini-pro
AI_MAX_TOKENS=4096

# ====================
# Trello Integration
# ====================
API_KEY_TRELLO=your_trello_api_key_here
API_SECRET_TRELLO=your_trello_api_secret_here

# ====================
# Database Configuration (Optional)
# ====================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_NAME=a2a_system

# ====================
# Web UI Configuration
# ====================
WEB_UI_PORT=8000
WEB_UI_HOST=localhost

# ====================
# Additional Settings
# ====================
# Project output directory
OUTPUT_DIR=a2a_projects

# Maximum concurrent agent communications
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30
